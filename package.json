{
  "name": "lang-tag",
  "version": "0.1.3",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/TheTonsOfCode/lang-tag"
  },
  "author": "TheTonsOfCode",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "bin": {
    "langtag": "./dist/cli/index.js"
  },
  "main": "./dist/lang-tag.umd.cjs",
  "module": "./dist/lang-tag.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/lang-tag.js",
      "require": "./dist/lang-tag.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && chmod 777 dist/cli/index.js",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "b": "rm -rf dist/ && npm run build && npm link --force && chmod 777 dist/cli/index.js"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "commander": "^13.1.0",
    "globby": "^14.1.0",
    "pathe": "^2.0.3"
  },
  "devDependencies": {
    "@types/node": "^22.13.13",
    "json5": "^2.2.3",
    "anymatch": "^3.1.3",
    "typescript": "~5.7.2",
    "vite": "^6.2.0",
    "vite-plugin-dts": "^4.5.3",
    "vitest": "^3.0.9"
  },
  "keywords": [
    "i18n",
    "translation",
    "internationalization",
    "localization",
    "typescript",
    "react",
    "component-based",
    "translation-management",
    "javascript",
    "lang-tag",
    "jsx",
    "tsx",
    "inline-translations",
    "translation-keys",
    "component-translations",
    "translation-extraction",
    "namespaces",
    "type-safe-translations",
